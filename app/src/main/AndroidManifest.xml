                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
