<?xml version="1.parent" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/action_bar_root_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/orange_round_bottom_shape"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/menu_frameLayout"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:src="@drawable/back_ic" />

            <ImageView
                android:id="@+id/menu_ic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_menu_ic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/menu_frameLayout"
            android:gravity="start"
            android:maxLines="1"
            android:padding="8dp"

            android:text="Medica"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp">

            <RelativeLayout
                android:id="@+id/map_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/handel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/map_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/location_ic_small" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/call_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/call_ic" />

            <ImageView
                android:id="@+id/notification_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/notifications" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="377dp"
            android:layout_height="44dp"
            android:layout_below="@id/menu_frameLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/black_border_white_round_shape"
            android:inputType="number"
            android:nextFocusDown="@+id/email"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/search_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/abc_ic_search_api_material"
                android:padding="4dp" />

            <EditText
                android:id="@+id/search_edt"
                android:layout_width="312dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="4dp"
               android:layout_centerVertical="true"
                android:layout_toEndOf="@id/search_ic"
                android:layout_toRightOf="@id/search_ic"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:inputType="text"

                android:textColor="@color/black"
                android:textColorHint="@color/border_shadow_color" />

            <ImageView
                android:id="@+id/filter_search_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />
        </RelativeLayout>
    </RelativeLayout>



        <include
            layout="@layout/services"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar_root_view"/>


</RelativeLayout>
